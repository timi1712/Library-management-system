# Enable URL rewriting
RewriteEngine On

# Redirect all requests to index.php (for Router.php)
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ index.php?page=$1 [QSA,L]

